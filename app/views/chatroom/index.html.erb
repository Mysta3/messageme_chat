<h2 class="ui center aligned icon header">
  <i class="orange rocketchat icon"></i>
  Let's Chat
</h2>


<div class="ui grid  ">
  <div class="eleven wide column">
    <div class="ui fluid raise card chatbox">
      <div class="content">
        <div class="ui small feed">
        <% @messages.each do |message| %>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <em><%= message.user.username %></em> >> <%= message.body %>
                </div>
              </div>
            </div>
          <% end %>
          </div>
        </div>
        <div class="extra content">
        <div class="ui inverted segment">
          <div class="ui fluid icon input">
            <input placeholder="Enter a message" type="text">
            <i class="bordered inverted orange icon edit"></i> 
          </div>
        </div>
      </div>
      </div>
    </div>
    <div class="four wide column">
    <div class="ui inverted vertical menu">
      <a class="item">
        Home
      </a>
      <a class="item">
        Messages
      </a>
      <a class="item">
        Friends
      </a>
    </div>
  </div>
  </div>
</div>


