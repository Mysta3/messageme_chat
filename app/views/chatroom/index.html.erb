<h2 class="ui center aligned icon header">
  <i class="orange rocketchat icon"></i>
  Let's Chat
</h2>


<div class="ui grid  ">
  <div class="eleven wide column">
    <div class="ui fluid raise card chatbox">
      <div class="content" id="messages">
        <div class="ui small feed" id="message-container">
        <%= render @messages %>
        </div>
      </div>
      <div id="extra-content" class="extra content">
        <%= form_for(@message, html: {class: "ui inverted segment", role: "form"}, url: message_path) do |f| %>
        <div class="ui fluid icon input">
          <%= f.text_field :body %>
          <%= f.button'<i class="bordered inverted orange icon edit"></i>'.html_safe %>
        </div>
        <% end %>
      </div>
      </div>
    </div>
    <div class="four wide column">
    <div class="ui inverted vertical menu">
      <a class="item">
        Home
      </a>
      <a class="item">
        Messages
      </a>
      <a class="item">
        Friends
      </a>
    </div>
  </div>
  </div>
</div>


